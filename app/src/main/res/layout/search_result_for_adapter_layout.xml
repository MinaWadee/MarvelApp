<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/SearchFieldColor">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/CharacterImg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mcu_background"/>

        <TextView
            android:id="@+id/CharacterNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_Search_Text"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/CharacterImg"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="A-Bomb (HAS)"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>