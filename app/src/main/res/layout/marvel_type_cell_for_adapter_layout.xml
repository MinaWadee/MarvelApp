<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="18dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/MainCardViewID"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardCornerRadius="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/CategoryImgID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mcu_background" />
        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/MarvelCharacterNameAndDesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Stark- Iron Man(2018) #19"
        android:textColor="@color/DescriptionAndCharacterNameTextColor"
        android:layout_below="@+id/MainCardViewID"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="12sp"/>

</RelativeLayout>